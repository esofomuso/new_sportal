<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-signin') do |f| %>
  <div class="input-group input-group-lg">
    <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Enter Email" %>
  </div>
  
  <div class="input-group input-group-lg">
    <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>  
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
