- if (elective = (elective || @elective)) && elective.errors.any?
  #error_explanation
    %h4
      = pluralize(elective.errors.count, "error")
      prohibited this elective from being saved:
    %ul
      - elective.errors.full_messages.each do |msg|
        %li= msg
%table
  %tr
    %th= f.label :name
    %td= f.text_field :name
    %th= f.label :code
    %td= f.text_field :code
  %tr
    %th= f.label :Grade
    %td= f.select :grade_id, ['',''] + grades.collect {|x| [x.name, x.id]},{}, :multiple => false
    %th= f.label :description
    %td= f.text_area :description
  %tr
    %th= f.label :active
    %td
      = f.check_box :active
    %th{:colspan => 2}
      .actions
      = f.submit 'Save Elective'